/* --- –°–ê–ú–ê –°–Ü–¢–ö–ê --- */
.board {
  display: grid;
  /* –ì–æ–ª–æ–≤–Ω–∏–π —Ç—Ä—é–∫: 10 –∫–æ–ª–æ–Ω–æ–∫ –ø–æ 30 –ø—ñ–∫—Å–µ–ª—ñ–≤ */
  grid-template-columns: repeat(10, 30px); 
  grid-template-rows: repeat(10, 30px);
  border: 2px solid #333;
  background-color: #333; /* –ö–æ–ª—ñ—Ä –º–µ–∂—ñ –º—ñ–∂ –∫–ª—ñ—Ç–∏–Ω–∫–∞–º–∏ */
  gap: 1px; /* –°—Ç–≤–æ—Ä—é—î –ª—ñ–Ω—ñ—ó —Å—ñ—Ç–∫–∏ */
}


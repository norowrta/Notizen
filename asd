/* CSS */
.board {
  display: grid;
  /* –ú–∞–≥—ñ—è: –ø–æ–≤—Ç–æ—Ä–∏ 10 —Ä–∞–∑—ñ–≤ –∫–æ–ª–æ–Ω–∫—É —Ä–æ–∑–º—ñ—Ä–æ–º 30px */
  grid-template-columns: repeat(10, 30px); 
  /* –¢–µ —Å–∞–º–µ –¥–ª—è —Ä—è–¥–∫—ñ–≤ */
  grid-template-rows: repeat(10, 30px);
  gap: 1px; /* –í—ñ–¥—Å—Ç—É–ø –º—ñ–∂ –∫–ª—ñ—Ç–∏–Ω–∫–∞–º–∏ */

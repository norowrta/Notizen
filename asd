2. –Ø–∫ –∑—Ä–æ–±–∏—Ç–∏ –≤–∏–±—ñ—Ä –∫–æ—Ä–∞–±–ª—è (–õ–æ–≥—ñ–∫–∞ "–ì–∞—Ä–∞–∂–∞")
–¢–æ–±—ñ –ø–æ—Ç—Ä—ñ–±–Ω–µ –º—ñ—Å—Ü–µ –∑–±–æ–∫—É (—Å–∞–π–¥–±–∞—Ä), –¥–µ –ª–µ–∂–∞—Ç—å —Ç–≤–æ—ó –∫–æ—Ä–∞–±–ª—ñ.
–£ React —Ü–µ –ø—Ä–æ—Å—Ç–æ —Å—Ç–µ–π—Ç, —è–∫–∏–π –ø–∞–º'—è—Ç–∞—î, —â–æ —Ç–∏ –∑–∞—Ä–∞–∑ –æ–±—Ä–∞–≤.

JavaScript
// –°—Ç–µ–π—Ç: —è–∫–∏–π –∫–æ—Ä–∞–±–µ–ª—å –º–∏ –∑–∞—Ä–∞–∑ —Ç—Ä–∏–º–∞—î–º–æ –≤ —Ä—É—Ü—ñ?
// null = –Ω—ñ—á–æ–≥–æ, 4 = 4-–ø–∞–ª—É–±–Ω–∏–π, 3 = 3-–ø–∞–ª—É–±–Ω–∏–π...
const [selectedShipSize, setSelectedShipSize] = useState(null);

// –°—Ç–µ–π—Ç: —è–∫ –º–∏ –π–æ–≥–æ –ø–æ–≤–µ—Ä—Ç–∞—î–º–æ? (–ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ —á–∏ –≤–µ—Ä—Ç–∏–∫–∞–ª—å–Ω–æ)
const [orientation, setOrientation] = useState('H'); 
3. –ü–æ–≤–Ω–∏–π –∫–æ–¥ (–ü—Ä–∏–∫–ª–∞–¥ —Ä–æ–∑—Å—Ç–∞–Ω–æ–≤–∫–∏)
–û—Å—å –ø–æ–≤–Ω–∏–π –∫–æ–º–ø–æ–Ω–µ–Ω—Ç React. –Ø –∑—Ä–æ–±–∏–≤ –π–æ–≥–æ –º–∞–∫—Å–∏–º–∞–ª—å–Ω–æ –ø—Ä–æ—Å—Ç–∏–º: —Ç–∏ –æ–±–∏—Ä–∞—î—à –¥–æ–≤–∂–∏–Ω—É –∫–æ—Ä–∞–±–ª—è –≤ –º–µ–Ω—é, –∞ –ø–æ—Ç—ñ–º —Ç–∏—Ü—è—î—à –Ω–∞ –ø–æ–ª–µ, —ñ –≤—ñ–Ω —Ç–∞–º –∑'—è–≤–ª—è—î—Ç—å—Å—è.

–°–∫–æ–ø—ñ—é–π —Ü–µ —ñ –ø–æ–≥—Ä–∞–π—Å—è:

JavaScript
import React, { useState } from 'react';
import './Battleship.css'; // –¢–≤—ñ–π CSS —Ñ–∞–π–ª (–¥–∏–≤. –Ω–∏–∂—á–µ)

// –ì–µ–Ω–µ—Ä—É—î–º–æ –ø—É—Å—Ç–µ –ø–æ–ª–µ (–º–∞—Å–∏–≤ 10x10)
const initialBoard = Array(10).fill(null).map(() => Array(10).fill({ hasShip: false }));

function BattleshipSetup() {
  const [board, setBoard] = useState(initialBoard);
  const [selectedShipSize, setSelectedShipSize] = useState(null); // –Ø–∫–∏–π —Ä–æ–∑–º—ñ—Ä –æ–±—Ä–∞–Ω–æ
  const [orientation, setOrientation] = useState('H'); // 'H' - Horizontal, 'V' - Vertical

  // –°–ø–∏—Å–æ–∫ –¥–æ—Å—Ç—É–ø–Ω–∏—Ö –∫–æ—Ä–∞–±–ª—ñ–≤
  const shipsToPlace = [
    { name: "–ê–≤—ñ–∞–Ω–æ—Å–µ—Ü—å", size: 4 },
    { name: "–ö—Ä–µ–π—Å–µ—Ä", size: 3 },
    { name: "–ï—Å–º—ñ–Ω–µ—Ü—å", size: 2 },
    { name: "–ö–∞—Ç–µ—Ä", size: 1 },
  ];

  // –§—É–Ω–∫—Ü—ñ—è: –∫–æ–ª–∏ –∫–ª—ñ–∫–∞—î–º–æ –ø–æ –∫–ª—ñ—Ç–∏–Ω—Ü—ñ
  const handleCellClick = (row, col) => {
    if (!selectedShipSize) {
      alert("–°–ø–æ—á–∞—Ç–∫—É –æ–±–µ—Ä—ñ—Ç—å –∫–æ—Ä–∞–±–µ–ª—å —É –º–µ–Ω—é –∑–ª—ñ–≤–∞!");
      return;
    }

    // 1. –°—Ç–≤–æ—Ä—é—î–º–æ –∫–æ–ø—ñ—é –ø–æ–ª—è (–±–æ React –Ω–µ –ª—é–±–∏—Ç—å –º—É—Ç–∞—Ü—ñ—ó)
    // JSON.parse(JSON.stringify(...)) - —Ü–µ —à–≤–∏–¥–∫–∏–π —Å–ø–æ—Å—ñ–± –∑—Ä–æ–±–∏—Ç–∏ –≥–ª–∏–±–æ–∫—É –∫–æ–ø—ñ—é
    const newBoard = JSON.parse(JSON.stringify(board));

    // 2. –ü–µ—Ä–µ–≤—ñ—Ä—è—î–º–æ, —á–∏ –≤–ª—ñ–∑–µ –∫–æ—Ä–∞–±–µ–ª—å (—â–æ–± –Ω–µ –≤–∏–ª—ñ–∑ –∑–∞ –º–µ–∂—ñ)
    if (orientation === 'H') {
      if (col + selectedShipSize > 10) return; // –ù–µ –≤–ª—ñ–∑–ª–æ –≤–ø—Ä–∞–≤–æ
      
      // –ú–∞–ª—é—î–º–æ –∫–æ—Ä–∞–±–µ–ª—å (—Ü–∏–∫–ª –ø–æ –¥–æ–≤–∂–∏–Ω—ñ)
      for (let i = 0; i < selectedShipSize; i++) {
        if (newBoard[row][col + i].hasShip) return; // –¢–∞–º –≤–∂–µ —â–æ—Å—å —î!
        newBoard[row][col + i].hasShip = true;
      }
    } else {
      // –í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω–æ
      if (row + selectedShipSize > 10) return; // –ù–µ –≤–ª—ñ–∑–ª–æ –≤–Ω–∏–∑
      
      for (let i = 0; i < selectedShipSize; i++) {
        if (newBoard[row + i][col].hasShip) return; // –ó–∞–π–Ω—è—Ç–æ!
        newBoard[row + i][col].hasShip = true;
      }
    }

    // 3. –ó–±–µ—Ä—ñ–≥–∞—î–º–æ –Ω–æ–≤–µ –ø–æ–ª–µ
    setBoard(newBoard);
  };

  return (
    <div className="game-container">
      
      {/* –õ–Ü–í–ê –ß–ê–°–¢–ò–ù–ê: –ú–ï–ù–Æ (–î–û–ö) */}
      <div className="sidebar">
        <h3>–û–±–µ—Ä—ñ—Ç—å –∫–æ—Ä–∞–±–µ–ª—å:</h3>
        <div className="ship-buttons">
          {shipsToPlace.map((ship) => (
            <button 
              key={ship.name}
              // –Ø–∫—â–æ —Ü–µ–π –∫–æ—Ä–∞–±–µ–ª—å –æ–±—Ä–∞–Ω–æ, –ø—ñ–¥—Å–≤—ñ—á—É—î–º–æ –∫–Ω–æ–ø–∫—É
              className={selectedShipSize === ship.size ? 'active-btn' : ''}
              onClick={() => setSelectedShipSize(ship.size)}
            >
              {ship.name} ({ship.size} –∫–ª.)
            </button>
          ))}
        </div>

        <div className="controls">
          <p>–ü–æ–≤–æ—Ä–æ—Ç: <strong>{orientation === 'H' ? '–ì–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª—å–Ω–æ' : '–í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω–æ'}</strong></p>
          <button onClick={() => setOrientation(orientation === 'H' ? 'V' : 'H')}>
            üîÑ –ü–æ–≤–µ—Ä–Ω—É—Ç–∏ (R)
          </button>
        </div>
      </div>

      {/* –ü–†–ê–í–ê –ß–ê–°–¢–ò–ù–ê: –ü–û–õ–ï –ì–†–ò */}
      <div className="board-area">
        <div className="board">
          {board.map((row, rowIndex) => 
            row.map((cell, colIndex) => (
              <div 
                key={`${rowIndex}-${colIndex}`}
                className={`cell ${cell.hasShip ? 'ship' : ''}`}
                onClick={() => handleCellClick(rowIndex, colIndex)}
              >
                {/* –¢—É—Ç –º–æ–∂–Ω–∞ –≤—ñ–¥–æ–±—Ä–∞–∑–∏—Ç–∏ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç–∏ –¥–ª—è –≤—ñ–¥–ª–∞–¥–∫–∏ */}
              </div>
            ))
          )}
        </div>
      </div>

    </div>
  );
}

export default BattleshipSetup;
CSS –¥–ª—è —Ü—å–æ–≥–æ (Battleship.css)
–î–æ–¥–∞–π —Ü–µ, —â–æ–± –≤–∏–≥–ª—è–¥–∞–ª–æ —è–∫ –≥—Ä–∞:

